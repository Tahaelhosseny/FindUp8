<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/productItemImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/placeholder"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/productItemNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="Product Name"
        android:textColor="@color/material_color_black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/productItemImg" />

    <TextView
        android:id="@+id/productItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sfcompactdisplay_medium"
        android:text="The red and Black cafe"
        android:textColor="@color/material_color_grey_600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/productItemNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/productItemNameTxt" />

    <TextView
        android:id="@+id/viewPreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View previous comment"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/sfcompactdisplay_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/productItemImg"
        app:layout_constraintTop_toBottomOf="@+id/productItemImg"/>

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview_bg"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/viewPreTxt"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="Nof Ahmed"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:textColor="@color/material_color_black"
        app:layout_constraintStart_toEndOf="@+id/user_photo"
        app:layout_constraintTop_toBottomOf="@+id/viewPreTxt" />

    <TextView
        android:id="@+id/comment_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="1sp"
        android:textSize="19sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="There are many variations of passages of larem lpsum avaliable, but the mojrity have suffeed alteration in some form, by injected humour."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/comment_username"
        app:layout_constraintTop_toBottomOf="@+id/comment_username" />

    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="1h"
        app:layout_constraintStart_toStartOf="@+id/comment_txt"
        app:layout_constraintTop_toBottomOf="@+id/comment_txt" />

    <TextView
        android:id="@+id/likeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="Like"
        app:layout_constraintStart_toEndOf="@+id/timeTxt"
        app:layout_constraintTop_toBottomOf="@+id/comment_txt" />

    <TextView
        android:id="@+id/replyTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:text="Reply"
        app:layout_constraintStart_toEndOf="@+id/likeTxt"
        app:layout_constraintTop_toBottomOf="@+id/comment_txt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="@+id/replyTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>