<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.UnFullScreen"
    tools:context=".fragments.ProfileFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:text="@string/profile"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:contentDescription="@string/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile"
        app:srcCompat="@drawable/ic_accountpic" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintLeft_toRightOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/toolbar_profile"/>

    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_number"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/sfcompactdisplay_medium"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintLeft_toRightOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/profile_name"/>

    <Button
        android:id="@+id/btn_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_null"
        android:drawableStart="@drawable/ic_notifications_on"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        android:layout_marginTop="30dp"
        android:text="@string/profile_notification"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        app:layout_constraintStart_toStartOf="@id/profile_pic"/>

    <Button
        android:id="@+id/btn_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_null"
        android:drawableStart="@drawable/ic_chat_on"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_notifications"
        android:text="@string/chats"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        app:layout_constraintStart_toStartOf="@id/profile_pic"/>

    <Button
        android:id="@+id/btn_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_null"
        android:drawableStart="@drawable/ic_saved_off"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_chats"
        android:text="@string/you_saved"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        app:layout_constraintStart_toStartOf="@id/profile_pic"/>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_null"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_saved"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        app:layout_constraintStart_toStartOf="@id/profile_pic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_null"
        app:layout_constraintTop_toBottomOf="@id/btn_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/create_store_account"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/sfcompactdisplay_semibold"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_profile_forward"
        app:layout_constraintStart_toStartOf="@id/btn_settings"/>

</android.support.constraint.ConstraintLayout>