<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    tools:style="@style/CardView"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="10dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/near_me_item_bg"
        app:layout_constraintBottom_toBottomOf="@+id/nearItemImg"
        app:layout_constraintEnd_toEndOf="@+id/nearItemReview"
        app:layout_constraintStart_toEndOf="@+id/nearItemReview"
        app:layout_constraintTop_toBottomOf="@+id/nearItemImg">

        <ImageView
            android:id="@+id/nearItemImg"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/near"
            android:minHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/nearItemName"
            app:layout_constraintCircleRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/material_color_grey_500" />


        <TextView
            android:id="@+id/nearItemName"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/sfcompactdisplay_semibold"
            android:maxLength="30"
            android:maxLines="1"
            android:text="@string/food"
            android:textColor="@color/material_color_black"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/nearItemDistance"
            app:layout_constraintStart_toStartOf="@+id/nearItemImg"
            app:layout_constraintTop_toBottomOf="@+id/nearItemImg" />

        <TextView
            android:id="@+id/nearItemDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/sfcompactdisplay_semibold"
            android:text="@string/_16_8km"
            android:textColor="@color/material_color_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearItemName" />

        <TextView
            android:id="@+id/nearItemTags"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sfcompactdisplay_regular"
            android:maxLength="30"
            android:maxLines="1"
            android:text="@string/cafe"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/nearItemReview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearItemDistance" />

        <TextView
            android:id="@+id/nearItemReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfcompactdisplay_ultralight"
            android:text="@string/_5_0"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/star"
            app:layout_constraintTop_toBottomOf="@+id/nearItemTags" />

        <ImageView
            android:id="@+id/love"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/love"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fav" />

        <com.like.LikeButton
            android:id="@+id/star_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/cardview_default_elevation"
            app:circle_end_color="@color/colorWhite"
            app:circle_start_color="@color/material_color_grey_700"
            app:dots_primary_color="@color/material_color_red_accent"
            app:dots_secondary_color="@color/material_color_grey_700"
            app:icon_size="25dp"
            app:icon_type="heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:like_drawable="@drawable/fav"
            app:unlike_drawable="@drawable/heart_black_3x" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/star"
            app:layout_constraintBottom_toBottomOf="@+id/nearItemReview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nearItemReview"
            app:srcCompat="@drawable/star_off" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>