<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProductDetailsFragment"
    android:background="@color/material_color_white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:padding="5dp"
            android:text="Price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/material_color_grey_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameLayout" />

        <co.ceryle.radiorealbutton.RadioRealButtonGroup
            android:id="@+id/priceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rrbg_animateDrawables_enter="overshoot"
            app:rrbg_animateTexts_enter="overshoot"
            app:rrbg_radius="10dp"
            app:rrbg_selectorColor="@color/colorBlack"
            app:rrbg_animateTexts_textColorTo="@color/colorBlack"
            app:rrbg_selectorSize="1dp"
            app:layout_constraintTop_toBottomOf="@id/priceTxt"
            app:layout_constraintStart_toStartOf="@id/priceTxt">

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="$"
                app:rrb_textColor="@color/material_color_grey_600"/>

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="$$"
                app:rrb_textColor="@color/material_color_grey_600"/>

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="$$$"
                app:rrb_textColor="@color/material_color_grey_600"/>

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="$$$$"
                app:rrb_textColor="@color/material_color_grey_600"/>

        </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:padding="5dp"
            android:text="Time"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceRadioGroup" />

        <co.ceryle.radiorealbutton.RadioRealButtonGroup
            android:id="@+id/timeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rrbg_animateDrawables_enter="overshoot"
            app:rrbg_animateTexts_enter="overshoot"
            app:rrbg_radius="10dp"
            app:rrbg_selectorColor="@color/colorBlack"
            app:rrbg_selectorSize="1dp"
            app:rrbg_animateTexts_textColorTo="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/timeTxt"
            app:layout_constraintStart_toStartOf="@id/timeTxt">

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="Open Now"
                app:rrb_textColor="@color/material_color_grey_600"/>

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="Open at.."
                app:rrb_textColor="@color/material_color_grey_600"/>

        </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        <TextView
            android:id="@+id/ratingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:padding="5dp"
            android:text="Rating"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeRadioGroup" />


            <RadioGroup
                android:id="@+id/ratingBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="@id/ratingTxt"
                app:layout_constraintTop_toBottomOf="@id/ratingTxt">

                <RadioButton
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/customized_rating_selector"
                    android:button="@null"
                    android:layout_marginEnd="@dimen/start_margin_left"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/customized_rating_selector"
                    android:button="@null"
                    android:layout_marginEnd="@dimen/start_margin_left"
                    android:layout_marginTop="8dp"
                  />
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/sfcompactdisplay_medium"
                    android:background="@drawable/customized_rating_selector"
                    android:button="@null"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="@dimen/start_margin_left" />
                <RadioButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/customized_rating_selector"
                    android:button="@null"
                    android:layout_marginEnd="@dimen/start_margin_left" />
                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/sfcompactdisplay_medium"
                    android:background="@drawable/customized_rating_selector"
                    android:button="@null"
                    android:layout_marginEnd="@dimen/start_margin_left"
                    android:gravity="bottom"
                    android:layout_marginTop="3dp"/>
            </RadioGroup>
        <RatingBar
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:stepSize="1"
            app:layout_constraintStart_toStartOf="@id/ratingTxt"
            app:layout_constraintTop_toBottomOf="@id/ratingTxt"/>

        <TextView
            android:id="@+id/distanceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:padding="5dp"
            android:text="Distance"
            android:textSize="16sp"
            android:textColor="@color/material_color_grey_600"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingBar" />

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/distance_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:tsb_ticks_count="4"
            app:tsb_thumb_color="@color/colorAccent"
            app:tsb_thumb_size="30dp"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_tick_marks_size="0dp"
            app:tsb_show_tick_texts="below"
            app:tsb_tick_texts_color="@color/material_color_grey_600"
            app:tsb_tick_texts_size="13sp"
            app:tsb_min="0.5"
            app:tsb_tick_texts_array="@array/distance_seekbar_values"
            app:tsb_track_background_color="@color/material_color_grey_500"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_size="1dp"
            app:tsb_track_progress_color="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="@id/distanceTxt"
            app:layout_constraintTop_toBottomOf="@id/distanceTxt"/>

        <co.ceryle.radiorealbutton.RadioRealButtonGroup
            android:id="@+id/orderByRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:rrbg_animateDrawables_enter="overshoot"
            app:rrbg_animateTexts_enter="overshoot"
            app:rrbg_radius="10dp"
            app:rrbg_selectorColor="@color/material_color_red_700"
            app:rrbg_selectorSize="4dp"
            app:layout_constraintTop_toBottomOf="@id/distance_seekbar"
            app:layout_constraintStart_toStartOf="@id/distance_seekbar">

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="By Saved"
                app:rrb_textColorTo="@color/colorBlack"
                android:textColor="@color/material_color_grey_600" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_text="By Liked"
                app:rrb_textColor="@color/colorBlack"/>

        </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        <Button
            android:id="@+id/applyBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_rounded_accent"
            android:fontFamily="@font/sfcompactdisplay_medium"
            android:text="Apply"
            android:textColor="@color/material_color_white"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderByRadioGroup"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>