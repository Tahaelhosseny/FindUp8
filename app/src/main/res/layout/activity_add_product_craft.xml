<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/colorWhite">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        tools:context=".UI.activities.AddProductCraftActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_addCraft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_addCraftBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:drawableStart="@drawable/baseline_keyboard_arrow_left_black_48dp"
                android:fontFamily="@font/sfcompactdisplay_medium"
                android:text="@string/craft_details"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layoutAddWithDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_view"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@id/recyclerCraftProducts"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@string/add_your_first_craft"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/sfcompactdisplay_semibold"
                android:textSize="@dimen/sp20"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@string/add_your_first_craft_hint"
                android:fontFamily="@font/sfcompactdisplay_regular"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/pic_craft1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    app:srcCompat="@drawable/group_5_2x"
                    android:background="@null"
                    android:contentDescription="@string/add_product"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg_rounded_edittext">
                <EditText
                    android:id="@+id/editText_craftName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="@string/craft_name"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorWhiteGrey"
                    android:fontFamily="@font/sfcompactdisplay_semibold"
                    android:textSize="@dimen/sp20"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg_rounded_edittext">
                <EditText
                    android:id="@+id/editText_craftDescription"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorWhiteGrey"
                    android:fontFamily="@font/sfcompactdisplay_semibold"
                    android:textSize="@dimen/sp20"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg_rounded_edittext">
                <EditText
                    android:id="@+id/craftPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="@string/price"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorWhiteGrey"
                    android:fontFamily="@font/sfcompactdisplay_semibold"
                    android:textSize="@dimen/sp20"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <Button
                    android:id="@+id/btn_addCraftDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_button_rounded_light_accent"/>
                <Button
                    android:id="@+id/btn_addCraftDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_button_rounded_default"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/addCraftLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dashed_rounded_view"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/recyclerCraftProducts"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dark2___add_3x"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:contentDescription="@string/add_your_first_craft" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/add_your_first_craft"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/sfcompactdisplay_semibold"
                    android:textSize="@dimen/sp20"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="@string/add_your_first_craft_hint"
                    android:fontFamily="@font/sfcompactdisplay_regular"
                    android:textSize="@dimen/sp20"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addOtherCraftLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutAddWithDetails"
            android:background="@drawable/bg_dashed_rounded_view"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dark2___add_3x"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin"
                android:contentDescription="@string/add_your_first_craft" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@string/add_other_craft"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/sfcompactdisplay_semibold"
                android:textSize="@dimen/sp20"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerCraftProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar_addCraft"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_rounded_accent"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/btn_submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>